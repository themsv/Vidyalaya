{
  "todohighlight.isEnable": true,
  "todohighlight.isCaseSensitive": true,
  "todohighlight.keywords": [
    { "text": "BUG:", "backgroundColor": "#FF0000", "color": "#FFF" },
    { "text": "REVIEW:", "backgroundColor": "#228BE6", "color": "#FFF" },
    { "text": "REMOVE:", "backgroundColor": "#E1306C", "color": "#FFF" },
    { "text": "CHECK:", "backgroundColor": "#FFA500", "color": "#FFF" },
    { "text": "HACK:", "backgroundColor": "#5F3DC4", "color": "#FFF" },
    { "text": "NOTE:", "backgroundColor": "#008000", "color": "#FFF" }
  ],
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "cSpell.words": ["tabler", "Vidyalaya"],
  "search.exclude": {
    "node_modules": true,
    "dist": true,
    "android": true,
    "ios": true
  },
  "typescript.tsdk": "node_modules/typescript/lib"
}
